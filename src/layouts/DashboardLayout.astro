    justify-content: center;
    /* align-items: center; */
  }
  #dashboard-main {
    /* width: 100%; */
    flex: 1;
    display: flex;
    flex-direction: column;
    /* align-items: center; */
    margin: 15px;
  }
  footer {
    text-align: center;
    padding: 10px 20px;
    margin: 10px;
    border-radius: 10px;
    background-color: #F7F7F7;
  }
  #logo {
    cursor: pointer;
  }
</style>
