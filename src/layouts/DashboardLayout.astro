---
import Layout from "./Layout.astro";
---

<Layout>
  <main id="dashboard">
    <nav>
      <div id="logo" style="display: flex; gap: 10px; align-items: center">
        <!-- <img src="/sparkhacks-logo.svg" alt="logo" width="45" height="45"/> -->
        <h1>SparkHacks Dashboard</h1>
      </div>
      <button id="signout-button">Sign out</button>
    </nav>
    <main id="dashboard-main">
      <slot />
    </main>
    <footer>Made by the <strong>SparkHacks 2026 team</strong> with love â™¥</footer>
  </main>
  <script>
    import { auth } from "../firebase/client";

    const logoBtn = document.getElementById("logo")
    logoBtn?.addEventListener("click", () => {
      window.location.assign("/dashboard")
    })

    const signoutBtn = document.getElementById(
      "signout-button"
    ) as HTMLButtonElement;
    signoutBtn.addEventListener("click", async () => {
      try {
        const res = await fetch("/api/auth/signout");
        if (!res.ok) {
          alert("cannot sign out");
          return;
        }
        await auth.signOut();
        return window.location.assign("/");
      } catch (err) {
        alert("cannot sign out");
        console.log(err);
      }
    });
  </script>
</Layout>
<style>
  	@font-face {
    font-family: 'Arial';
    /* src: url('/fonts/Nunito-VariableFont_wght.ttf') format('opentype'); */
    font-weight: 0 900;
  }

	html {
    font-family: 'Arial', system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  
	code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  #dashboard {
    /* width: 100%;
    height: 100%; */
    display: flex;
    flex-direction: column;
    justify-content: center;
    /* align-items: center; */
  }
  nav {
    /* width: 100%; */
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60px;
    padding: 20px 40px;
    box-sizing: border-box;
    border-radius: 15px;
    background-color: #F7F7F7;
    color: black;
    margin: 15px;
  }
  #dashboard-main {
    /* width: 100%; */
    flex: 1;
    display: flex;
    flex-direction: column;
    /* align-items: center; */
    margin: 15px;
  }
  footer {
    text-align: center;
    padding: 10px 20px;
    margin: 10px;
    border-radius: 10px;
    background-color: #F7F7F7;
  }
  #logo {
    cursor: pointer;
  }
  #signout-button {
		cursor: pointer;
    font-size: large;
		padding: 8px 16px;
		border: none;
		border-radius: 8px;
  }
  #signout-button:hover {
    filter: brightness(80%);
    text-decoration: underline;
  }
</style>
