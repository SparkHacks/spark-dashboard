---
import LiveSchedule from "./schedule/LiveSchedule.astro";
import ApplicationStatus from "./ApplicationStatus";
import { QrCode, FileText, ChevronDown, Activity, Minimize2, User, Mail, Hash, Utensils, CheckCircle, Circle, ClipboardCheck, Maximize2 } from "lucide-react";

interface CheckinStats {
  d1Here: boolean;
  d1Snack: boolean;
  d1Dinner: boolean;
  d1Cookies: boolean;
  d2Here: boolean;
  d2Breakfast: boolean;
  d2Lunch: boolean;
  d2Dinner: boolean;
}

interface Props {
  userName: string;
  userEmail: string;
  appStatus: string;
  submittedDate: string;
  registered: boolean;
  newUserState: boolean;
  uidDataURI: string;
  revealDecision?: boolean;
  foodGroup: number | null;
  userUIN: number | null;
  checkinStats: CheckinStats;
}

const {
  userName,
  userEmail,
  appStatus,
  submittedDate,
  registered,
  newUserState,
  uidDataURI,
  revealDecision = true,
  foodGroup,
  userUIN,
  checkinStats,
} = Astro.props;

// Only show status visualizer if user applied
const showStatusVisualizer = registered;

type AppStatusType = "waiting" | "declined" | "waitlist" | "invited" | "accepted";

const statusLabels: Record<AppStatusType, string> = {
  waiting: "Pending ‚è≥",
  declined: "Declined ‚ùå",
  waitlist: "Waitlisted ‚è≥",
  invited: "Invited üéâ",
  accepted: "Accepted üéâ",
};

const statusMessage: Record<AppStatusType, string> = {
  waiting:
    "We have received your application and will review it shortly. Please check this website and email for updates.",
  declined:
    "Your application has been declined due to your decision or space limit. Please come back next year to re-apply!",
  waitlist:
    "Due to limited space, your application has been waitlisted. We will reach out with status updates.",
  invited:
    "You've been invited to SparkHacks 2026! Please accept or decline your invitation below.",
  accepted:
    "Congratulations üéâüéâüéâ! You are officially a SparkHacks 2026 participant! Check your inbox for details about schedules.",
};

const getStatusLabel = (status: string) => {
  if (status in statusLabels) {
    return statusLabels[status as AppStatusType];
  }
  return status;
};

const getMessage = (status: string) => {
  if (status in statusMessage) {
    return statusMessage[status as AppStatusType];
  }
  return "Unknown result. Please email sparkhacks@uic.edu to reach out our team for support.";
};

const statusColors: Record<AppStatusType, string> = {
  waiting: "#666666",    // Gray
  declined: "#e85c5c",   // Red
  waitlist: "#5a9ae8",   // Blue
  invited: "#4aba6f",    // Green
  accepted: "#4aba6f",   // Green
};

const getStatusColor = (status: string) => {
  if (status in statusColors) {
    return statusColors[status as AppStatusType];
  }
  return "#000000";
};

---

<section class="modal-wrapper" id="withdraw-modal">
  <div class="modal">
    <button class="modal-return-btn">Return</button>
    <img src="/sparkhacks-logo.svg" alt="logo" width="150" height="150" />
    <h2>Are you sure you want to withdraw SparkHacks 2026?</h2>
    <p>
      Type <strong><em>{userEmail}</em></strong> and hit Enter (Or click "withdraw"
      button) to withdraw yourself from SparkHacks 2026 <strong
        >(Doing this, you cannot revert your action)</strong
      >
    </p>
    <form id="withdraw-form">
      <input
        class="modal-input"
        placeholder="Enter text"
        name="withdraw-text"
        required
      />
      <button class="modal-withdraw-btn" type="submit">Withdraw</button>
    </form>
  </div>
</section>

<section class="qr-fullscreen-modal" id="qr-modal">
  <div class="qr-modal-container">
    <button class="qr-minimize-btn" aria-label="Close modal">
      <Minimize2 size={24} />
    </button>

    <div class="qr-modal-header">
      <div class="qr-modal-avatar">
        <User size={32} color="#5a9ae8" />
      </div>
      <h2 class="qr-modal-name">{userName}</h2>
      <div class="qr-modal-email-row">
        <Mail size={14} color="#888" />
        <span>{userEmail}</span>
      </div>
    </div>

    {foodGroup && (
      <div class="qr-modal-food-row">
        <Utensils size={24} color="white" />
        <span class="qr-modal-food-label">Food Group:</span>
        <span class="qr-modal-food-number">{foodGroup}</span>
      </div>
    )}

    <div class="qr-modal-badges">
      {userUIN && (
        <div class="qr-badge">
          <Hash size={16} />
          <span class="qr-badge-label">UIN</span>
          <span class="qr-badge-value">{userUIN}</span>
        </div>
      )}
      <div class="qr-badge qr-badge-status" style={`border-color: ${getStatusColor(appStatus)}; background-color: ${getStatusColor(appStatus)}15;`}>
        <CheckCircle size={16} color={getStatusColor(appStatus)} />
        <span class="qr-badge-label">Status</span>
        <span class="qr-badge-value" style={`color: ${getStatusColor(appStatus)};`}>{getStatusLabel(appStatus)}</span>
      </div>
    </div>

    <div class="qr-code-wrapper">
      <img
        id="qr-modal-image"
        src={uidDataURI}
        alt="QR Code"
      />
    </div>

    <p class="qr-modal-hint">Show this QR code for check-in and food</p>
  </div>
</section>

<section class="modal-wrapper" id="accept-modal">
  <div class="modal confirm-modal accept-modal-content">
    <img src="/sparkhacks-logo.svg" alt="logo" width="120" height="120" />
    <h2>Accept Invitation</h2>
    <p>Are you sure you want to <strong>accept</strong> your invitation to SparkHacks 2026?</p>
    <p class="confirm-subtext">By accepting, you confirm that you will attend the event.</p>
    <div class="confirm-btns">
      <button id="accept-confirm-btn" class="confirm-yes-btn">Yes, Accept</button>
      <button id="accept-cancel-btn" class="confirm-no-btn">Cancel</button>
    </div>
  </div>
</section>

<section class="modal-wrapper" id="decline-modal">
  <div class="modal confirm-modal decline-modal-content">
    <img src="/sparkhacks-logo.svg" alt="logo" width="120" height="120" />
    <h2>Decline Invitation</h2>
    <p>Are you sure you want to <strong>decline</strong> your invitation to SparkHacks 2026?</p>
    <p class="confirm-subtext warning">This action cannot be undone and your spot will be given to someone else.</p>
    <div class="confirm-btns">
      <button id="decline-confirm-btn" class="confirm-danger-btn">Yes, Decline</button>
      <button id="decline-cancel-btn" class="confirm-no-btn">Cancel</button>
    </div>
  </div>
</section>


<section class="user-info">
  <h1>Welcome, {userName}!</h1>
</section>

{
  showStatusVisualizer && appStatus !== "" && (
    <section class="progress-tracker collapsible-section">
      <div class="section-header collapsible-header">
        <div class="section-title">
          <Activity size={24} className="section-icon" />
          <h2>Application Status: <span class="status-badge" style={`color: ${getStatusColor(appStatus)};`}>{getStatusLabel(appStatus)}</span></h2>
        </div>
        <ChevronDown size={24} className="chevron-icon" />
      </div>
      <div class="section-content">
        <ApplicationStatus client:load message={appStatus as AppStatusType | ""} />
      </div>
    </section>
  )
}

<section
  class={`dashboard-status ${appStatus !== "" ? appStatus : ""}`}
  style={showStatusVisualizer && appStatus !== "" ? "" : "display: none"}
>
  <strong style={`color: ${getStatusColor(appStatus)};`}>{getStatusLabel(appStatus)}</strong>: <span style="color: black;">{getMessage(appStatus)}</span>
  {
    appStatus === "invited" && (
      <>
        <div>Do you still accept to participate SparkHacks?</div>
        <div class="decideBtns">
          <button id="accept-btn">Accept</button>
          <button id="withdraw-btn">Withdraw</button>
        </div>
      </>
    )
  }
  {
    appStatus === "accepted" && (
      <>
        <button id="modal-open-btn">Withdraw SparkHacks</button>
      </>
    )
  }
  {
    appStatus === "waitlist" && (
      <>
        <button id="modal-open-btn">Withdraw from Waitlist</button>
      </>
    )
  }
</section>

{
  appStatus === "accepted" && (
    <section id="live-schedule-section">
      <LiveSchedule />
    </section>

    <section class="qr-section collapsible-section">
      <div class="section-header collapsible-header">
        <div class="section-title">
          <QrCode size={24} className="section-icon" />
          <h2>QR Code</h2>
        </div>
        <ChevronDown size={24} className="chevron-icon" />
      </div>
      <div class="section-content">
        <p class="section-subtitle">Use this for check in and get food! ‚úÖ</p>
        {foodGroup && (
          <div class="food-group-badge">
            <span class="food-group-label">Food Group</span>
            <span class="food-group-number">{foodGroup}</span>
          </div>
        )}
        <div class="qr-preview-wrapper">
          <img
            id="qr-code-image"
            class="qr-preview-image"
            src={uidDataURI}
            alt="Click to enlarge QR code"
          />
          <div class="qr-expand-hint">
            <Maximize2 size={16} />
            <span>Tap to expand</span>
          </div>
        </div>
      </div>
    </section>

    <section class="checkin-stats-section collapsible-section">
      <div class="section-header collapsible-header">
        <div class="section-title">
          <ClipboardCheck size={24} className="section-icon" />
          <h2>Check-in Stats</h2>
        </div>
        <ChevronDown size={24} className="chevron-icon" />
      </div>
      <div class="section-content">
        <p class="section-subtitle">Your check-in and meal status during the event</p>
        <div class="checkin-grid">
          <div class="checkin-day">
            <span class="checkin-day-label">Day 1</span>
            <div class={`checkin-item ${checkinStats.d1Here ? "checked" : ""}`}>
              {checkinStats.d1Here ? <CheckCircle size={18} className="checkin-icon-yes" /> : <Circle size={18} className="checkin-icon-no" />}
              <span>Check-In</span>
            </div>
            <div class={`checkin-item ${checkinStats.d1Snack ? "checked" : ""}`}>
              {checkinStats.d1Snack ? <CheckCircle size={18} className="checkin-icon-yes" /> : <Circle size={18} className="checkin-icon-no" />}
              <span>Snacks</span>
            </div>
            <div class={`checkin-item ${checkinStats.d1Dinner ? "checked" : ""}`}>
              {checkinStats.d1Dinner ? <CheckCircle size={18} className="checkin-icon-yes" /> : <Circle size={18} className="checkin-icon-no" />}
              <span>Dinner</span>
            </div>
            <div class={`checkin-item ${checkinStats.d1Cookies ? "checked" : ""}`}>
              {checkinStats.d1Cookies ? <CheckCircle size={18} className="checkin-icon-yes" /> : <Circle size={18} className="checkin-icon-no" />}
              <span>Cookies</span>
            </div>
          </div>
          <div class="checkin-day">
            <span class="checkin-day-label">Day 2</span>
            <div class={`checkin-item ${checkinStats.d2Here ? "checked" : ""}`}>
              {checkinStats.d2Here ? <CheckCircle size={18} className="checkin-icon-yes" /> : <Circle size={18} className="checkin-icon-no" />}
              <span>Check-In</span>
            </div>
            <div class={`checkin-item ${checkinStats.d2Breakfast ? "checked" : ""}`}>
              {checkinStats.d2Breakfast ? <CheckCircle size={18} className="checkin-icon-yes" /> : <Circle size={18} className="checkin-icon-no" />}
              <span>Breakfast</span>
            </div>
            <div class={`checkin-item ${checkinStats.d2Lunch ? "checked" : ""}`}>
              {checkinStats.d2Lunch ? <CheckCircle size={18} className="checkin-icon-yes" /> : <Circle size={18} className="checkin-icon-no" />}
              <span>Lunch</span>
            </div>
            <div class={`checkin-item ${checkinStats.d2Dinner ? "checked" : ""}`}>
              {checkinStats.d2Dinner ? <CheckCircle size={18} className="checkin-icon-yes" /> : <Circle size={18} className="checkin-icon-no" />}
              <span>Dinner</span>
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}

<section class="dashboard-app collapsible-section">
  <div class="section-header collapsible-header">
    <div class="section-title">
      <FileText size={24} className="section-icon" />
      <h2>Application to SparkHacks</h2>
    </div>
    <div class="header-right">
      <div class="close-date"><strong>Close at:</strong> 1/27/26</div>
      <ChevronDown size={24} className="chevron-icon" />
    </div>
  </div>
  <div class="section-content">
    {
      submittedDate !== "" && (
        <p class="section-subtitle">
          <strong>Submitted at:</strong> {submittedDate}
        </p>
      )
    }
    <button
      id="app-btn"
      disabled={registered ? false : !newUserState}
      onclick={registered || newUserState ? "window.location.assign('/application')" : ""}
    >
      {
        registered
          ? "View Application"
          : newUserState
            ? "Start Application"
            : "Applications are closed :("
      }
    </button>
  </div>
</section>

<script>
  const acceptBtn = document.getElementById("accept-btn") as HTMLButtonElement;
  const withdrawBtn = document.getElementById(
    "withdraw-btn"
  ) as HTMLButtonElement;

  const withdrawModal = document.getElementById("withdraw-modal") as HTMLElement;
  const modalContent = withdrawModal?.getElementsByClassName(
    "modal"
  )[0] as HTMLElement;
  const modalOpenBtn = document.getElementById(
    "modal-open-btn"
  ) as HTMLButtonElement;
  const modalCloseBtn = withdrawModal?.getElementsByClassName(
    "modal-return-btn"
  )[0] as HTMLElement;

  const withdrawForm = document.getElementById(
    "withdraw-form"
  ) as HTMLFormElement;

  if (modalOpenBtn && withdrawModal) {
    modalOpenBtn.addEventListener("click", () => {
      withdrawModal.style.display = "flex";
    });
  }
  
  modalCloseBtn?.addEventListener("click", () => {
    if (withdrawModal) {
      withdrawModal.style.display = "none";
    }
  });
  withdrawModal?.addEventListener("click", () => {
    withdrawModal.style.display = "none";
  });
  modalContent?.addEventListener("click", (e) => {
    e.stopPropagation();
  });

  // QR Code Fullscreen Modal
  const qrCodeImage = document.getElementById("qr-code-image") as HTMLImageElement;
  const qrPreviewWrapper = document.querySelector(".qr-preview-wrapper") as HTMLElement;
  const qrModal = document.getElementById("qr-modal") as HTMLElement;
  const qrModalContainer = qrModal?.querySelector(".qr-modal-container") as HTMLElement;
  const qrMinimizeBtn = qrModal?.querySelector(".qr-minimize-btn") as HTMLElement;

  const openQrModal = () => {
    if (qrModal) {
      qrModal.classList.add("active");
      document.body.style.overflow = "hidden";
    }
  };

  const closeQrModal = () => {
    if (qrModal) {
      qrModal.classList.remove("active");
      document.body.style.overflow = "";
    }
  };

  qrCodeImage?.addEventListener("click", openQrModal);
  qrPreviewWrapper?.addEventListener("click", openQrModal);

  qrMinimizeBtn?.addEventListener("click", (e) => {
    e.stopPropagation();
    closeQrModal();
  });

  qrModal?.addEventListener("click", (e) => {
    if (e.target === qrModal) {
      closeQrModal();
    }
  });

  qrModalContainer?.addEventListener("click", (e) => {
    e.stopPropagation();
  });

  withdrawForm?.addEventListener("submit", async (e) => {
    e.preventDefault();
    try {
      const response = await fetch("/api/auth/withdraw-sparkhacks", {
        method: "POST",
        body: new FormData(withdrawForm),
      });

      if (!response.ok) {
        alert("Something is wrong with withdrawing");
        return;
      }

      const text = await response.text();
      alert(text);
      window.location.reload();
    } catch (err) {
      console.error(err);
      alert("Something is wrong with withdrawing sparkhacks");
    }
  });

  const decideSparkhacksCallback = async (
    action: "accepted" | "declined"
  ) => {
    try {
      const formData = new FormData();
      formData.set("action", action);
      const res = await fetch("/api/auth/decide-sparkhacks", {
        method: "POST",
        body: formData,
      });

      if (!res.ok) {
        alert("Something is wrong with deciding sparkhacks");
        return;
      }

      window.location.reload();
    } catch (err) {
      console.error(err);
      alert("Something is wrong");
    }
  };

  // Accept Modal
  const acceptModal = document.getElementById("accept-modal") as HTMLElement;
  const acceptModalContent = acceptModal?.querySelector(".confirm-modal") as HTMLElement;
  const acceptConfirmBtn = document.getElementById("accept-confirm-btn") as HTMLButtonElement;
  const acceptCancelBtn = document.getElementById("accept-cancel-btn") as HTMLButtonElement;

  // Decline Modal
  const declineModal = document.getElementById("decline-modal") as HTMLElement;
  const declineModalContent = declineModal?.querySelector(".confirm-modal") as HTMLElement;
  const declineConfirmBtn = document.getElementById("decline-confirm-btn") as HTMLButtonElement;
  const declineCancelBtn = document.getElementById("decline-cancel-btn") as HTMLButtonElement;

  // Open accept modal
  acceptBtn?.addEventListener("click", () => {
    if (acceptModal) {
      acceptModal.style.display = "flex";
    }
  });

  // Close accept modal on cancel or backdrop click
  acceptCancelBtn?.addEventListener("click", () => {
    if (acceptModal) {
      acceptModal.style.display = "none";
    }
  });
  acceptModal?.addEventListener("click", () => {
    if (acceptModal) {
      acceptModal.style.display = "none";
    }
  });
  acceptModalContent?.addEventListener("click", (e) => {
    e.stopPropagation();
  });

  // Confirm accept
  acceptConfirmBtn?.addEventListener("click", () => {
    acceptConfirmBtn.disabled = true;
    acceptConfirmBtn.textContent = "Processing...";
    decideSparkhacksCallback("accepted");
  });

  // Open decline modal
  withdrawBtn?.addEventListener("click", () => {
    if (declineModal) {
      declineModal.style.display = "flex";
    }
  });

  // Close decline modal on cancel or backdrop click
  declineCancelBtn?.addEventListener("click", () => {
    if (declineModal) {
      declineModal.style.display = "none";
    }
  });
  declineModal?.addEventListener("click", () => {
    if (declineModal) {
      declineModal.style.display = "none";
    }
  });
  declineModalContent?.addEventListener("click", (e) => {
    e.stopPropagation();
  });

  // Confirm decline
  declineConfirmBtn?.addEventListener("click", () => {
    declineConfirmBtn.disabled = true;
    declineConfirmBtn.textContent = "Processing...";
    decideSparkhacksCallback("declined");
  });

  // Collapsible sections (exclude sched-header which has its own handler)
  const collapsibleHeaders = document.querySelectorAll(".collapsible-header:not(.sched-header)");
  collapsibleHeaders.forEach((header) => {
    header.addEventListener("click", () => {
      const section = header.closest(".collapsible-section");
      if (section) {
        section.classList.toggle("collapsed");
      }
    });
  });
</script>

<style>
  .user-info {
    flex: 1;
    max-width: 100%;
    font-size: x-large;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .user-info > h1 {
    margin: 0;
    padding-left: 0;
  }

  .progress-tracker {
    box-sizing: border-box;
    flex: 1;
    max-width: 100%;
    margin-top: 20px;
    border-radius: 10px;
    padding: 12px 20px 20px 20px;
    background-color: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .dashboard-status {
    box-sizing: border-box;
    flex: 1;
    max-width: 100%;
    margin-top: 20px;
    border-radius: 10px;
    padding: 20px 20px 20px 20px;
    background-color: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .dashboard-app {
    box-sizing: border-box;
    flex: 1;
    max-width: 100%;
    margin-top: 20px;
    padding: 20px;
    border-radius: 12px;
    background-color: white;
    margin-bottom: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  #app-btn {
    margin-top: 16px;
    width: 100%;
    padding: 16px 32px;
    font-size: 16px;
    font-weight: bold;
    background-color: #c0edff;
    border: none;
    border-radius: 10px;
    cursor: pointer;
  }

  .decideBtns {
    margin-top: 10px;
    display: flex;
    gap: 10px;
  }

  #accept-btn,
  #withdraw-btn {
    cursor: pointer;
    flex: 1;
    border: none;
    border-radius: 10px;
    padding: 16px 16px;
    font-size: 16px;
    font-weight: bold;
  }

  #app-btn:hover,
  #accept-btn:hover,
  #withdraw-btn:hover,
  #modal-open-btn:hover {
    filter: brightness(90%);
    transform: scale(1.02);
    transition: all 0.2s ease;
  }

  #accept-btn {
    background-color: #cef5be;
  }

  #withdraw-btn {
    background-color: #f4bdbd;
  }

  #modal-open-btn {
    display: block;
    padding: 8px 16px;
    background-color: #f4bdbd;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    margin-top: 12px;
  }

  .modal-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.6);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }

  .modal {
    width: 600px;
    max-width: 100%;
    min-height: 400px;
    background-color: white;
    border-radius: 8px;
    padding: 20px 20px;
    display: flex;
    text-align: center;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border: 6px solid #ff8a8a;
  }

  .modal-withdraw-btn {
    cursor: pointer;
    background-color: #f4bdbd;
    border: none;
    border-radius: 4px;
    padding: 4px 8px;
  }

  .modal-return-btn {
    border: none;
    border-radius: 4px;
    cursor: pointer;
    padding: 8px 16px;
    align-self: self-start;
  }

  /* QR Preview in section */
  .qr-preview-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: pointer;
    padding: 0 4px;
  }

  .qr-preview-image {
    display: block;
    max-width: 100%;
    height: auto;
    width: 20rem;
    border: 3px solid #1a1a1a;
    border-radius: 12px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-sizing: border-box;
  }

  .qr-preview-wrapper:hover .qr-preview-image {
    transform: scale(1.02);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .qr-expand-hint {
    display: flex;
    align-items: center;
    gap: 6px;
    margin-top: 12px;
    padding: 8px 16px;
    background-color: #f0f0f0;
    border-radius: 20px;
    font-size: 13px;
    color: #666;
    transition: all 0.2s ease;
  }

  .qr-preview-wrapper:hover .qr-expand-hint {
    background-color: #5a9ae8;
    color: white;
  }

  .qr-preview-wrapper:hover .qr-expand-hint :global(svg) {
    color: white;
  }

  /* Fullscreen QR Modal */
  .qr-fullscreen-modal {
