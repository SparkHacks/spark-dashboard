---
import Refresh from "./refresh.svg"
import LiveSchedCard from "./LiveSchedCard.astro"
import { scheduleData } from "./scheduleData";

const now = new Date();
const start = new Date("2026-02-06T15:45:00.000-06:00");
const end = new Date("2026-02-07T20:30:00.000-06:00");
---
{ ( start < now && now < end ) ?
    <section class="sched-section">
        <h2>Live Schedule</h2>
        <div id="component-container">    
            <div id="flex-box"> 
                {
                    scheduleData.map((d) => (
                        d.events.map((event) => (
                            <LiveSchedCard eventData={event} />
                        ))
                    ))
                }
            </div>

            <a href="https://www.sparkhacks.org/#schedule">
                <div id="full-sched-btn">
                    <span style="position:relative; z-index:10; font-size: 1.5rem; line-height: 2rem; color:white;">View full schedule</span>
                </div>
            </a>
            <div id="last-updated">
                <span style="color:black">Last updated: {now.toLocaleTimeString("en-US")}</p>
                <button onclick="location.reload()" style="cursor:pointer; width:3rem; height:3rem;">
                    <Refresh style="width:100%; height:100%;"/>
                </button>
            </div>
        </div>
    </section>
    : null
    
}

<style>
    .sched-section {
    box-sizing: border-box;
    flex: 1;
    max-width: 100%;
    margin-top: 20px;
    padding: 12px 20px 20px 20px;
    border-radius: 10px;
    background-color: white;
    margin-bottom: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  #component-container {
    display:flex; 
    flex-direction:column;
    width:[75%]; 
    padding:2rem; 
    place-content:center; 
    align-items:center;
  }

  #flex-box {
    display:flex;
    flex-direction:row;
    flex-wrap:wrap; 
    place-content:center; 
    justify-items:center; 
    align-items:center; 
    color:black; 
    gap:3rem;
    padding-bottom:10;
  }

  #full-sched-btn {
    display: inline-block;
    padding: 8px 16px;
    background-color: #5a9ae8;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    margin-top: 2rem;
    width: fit-content;
    overflow: hidden;
    text-align: center;
  }

  #full-sched-btn:hover {
    filter: brightness(90%);
    transform: scale(1.02);
    transition: all 0.2s ease;
  }

  #last-updated {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    justify-content: center;
    place-items: center;
    padding-top: 2rem;
  }
</style>